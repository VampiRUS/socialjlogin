	<creationDate>October 2012</creationDate>
	<copyright>vampirus.ru</copyright>
	<license>GNU General Public License version 2 or later; see	LICENSE.txt</license>
	<authorEmail>vamp1rus@yandex.ru</authorEmail>
	<authorUrl>vampirus.ru</authorUrl>
	<version>0.0.1</version>
	<description>PLG_SOCIALJLOGIN_YANDEX_XML_DESCRIPTION</description>
	<files>
		<filename plugin="yandex">yandex.php</filename>
		<filename>index.html</filename>
		<filename>yandex.png</filename>
	</files>
	<languages folder="language">
		<language tag="ru-RU">ru-RU/ru-RU.plg_socialjlogin_yandex.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_socialjlogin_yandex.sys.ini</language>
