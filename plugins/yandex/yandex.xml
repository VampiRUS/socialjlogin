	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="clientid" type="text"
					default=""
					description="PLG_SOCIALJLOGIN_YANDEX_FIELD_CLIENTID_DESC"
					label="PLG_SOCIALJLOGIN_YANDEX_FIELD_CLIENTID_LABEL"
					/>
				
				<field name="secret" type="text"
					default=""
					description="PLG_SOCIALJLOGIN_YANDEX_FIELD_SECRET_DESC"
					label="PLG_SOCIALJLOGIN_YANDEX_FIELD_SECRET_LABEL"
					/>
				
			</fieldset>

		</fields>
