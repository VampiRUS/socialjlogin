	<languages folder="language">
		<language tag="ru-RU">ru-RU/ru-RU.plg_socialjlogin_twitter.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_socialjlogin_twitter.sys.ini</language>
