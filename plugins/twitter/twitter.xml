		<fields name="params">

			<fieldset name="basic">
				<field name="key" type="text"
					default=""
					description="PLG_SOCIALJLOGIN_TWITTER_FIELD_KEY_DESC"
					label="PLG_SOCIALJLOGIN_TWITTER_FIELD_KEY_LABEL"
					/>

				<field name="secret" type="text"
					default=""
					description="PLG_SOCIALJLOGIN_TWITTER_FIELD_SECRET_DESC"
					label="PLG_SOCIALJLOGIN_TWITTER_FIELD_SECRET_LABEL"
					/>

