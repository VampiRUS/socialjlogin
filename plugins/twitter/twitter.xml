	<version>0.1.0</version>
	<description>PLG_SOCIALJLOGIN_TWITTER_XML_DESCRIPTION</description>
	<files>
		<filename plugin="twitter">twitter.php</filename>
		<filename>index.html</filename>
		<filename>twitter.png</filename>
